<h1 class= "text-white">Posts#new</h1>
<p>Find me in app/views/posts/new.html.erb</p>


<div class="container text-white">
  <h1>crea tu post </h1>
  <%= form_with() do |f| %>
    <%= f.label :titulo, class: "form-label"%>
    <%= f.text_field  :title, class: "form-control" %>

    <%= f.label :contenido %>
    <%= f.text_area  :content, class: "form-control" %>

    <%= f.label :image_url %>
    <%= f.text_field  :image_url, class: "form-control" %>

    <%= f.submit "Crear Post", class: "btn btn-primary my-3" %>



  <% end %>
</div>
